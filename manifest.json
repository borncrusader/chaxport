{
  "manifest_version": 3,
  "name": "Chaxport",
  "version": "2.0",
  "description": "Clean your claude.ai responses and export to PDF via the browser",
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "action": {
    "default_title": "Chaxport"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://claude.ai/*"
  ],
  "content_scripts": [{
    "matches": ["https://claude.ai/*"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }]
}
